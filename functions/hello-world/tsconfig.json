{
    "compilerOptions": {
        "target": "es2021",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "commons": ["../../layers/commons"]
        }
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}
