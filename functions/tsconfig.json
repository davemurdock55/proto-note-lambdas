{
    "compilerOptions": {
        "target": "es2021",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": false,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "commons": ["../layers/commons"]
        },
        "outDir": "./dist"
    },
    "include": ["hello-world/**/*.ts", "second-hello-world/**/*.ts", "jest.config.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
